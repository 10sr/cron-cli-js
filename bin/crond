#!/usr/bin/env node

process.title = "crond";

main(process.argv);

function main(argv){
    var minimist = require("minimist");

    var opts = minimist(argv.slice(2), {
        boolean: ["exit-on-failure"]
    });
    var crontab = opts._[0];
    var exitOnFailure = opts["exit-on-failure"];

    var crond = require("../lib");
    crond.start(crontab, {
        exitOnFailure: exitOnFailure
    })
    return;
}
